---
const {variant, size} = Astro.props;
---
<button class={variant + " " + size}>
    <slot />
</button>

<style>
    button{
        /* padding: 0.3rem 1.2rem 0.3rem 1.2rem; */
        border-radius: 10px;
        color: #FAFAFA;
        border: none;
        text-decoration: none;
    }
    .join{
        background-color: #FF22FD;
        font-family: "Inter", sans-serif;
        font-weight: 700;
    }
    .desktop{
        width: 135px;
        height: 44px;
        text-align: center;
    }
</style>