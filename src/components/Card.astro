---
const header = Astro.props.header;
const text = Astro.props.text;
---

<article class="card">
    <slot class="img" />
    <div class="name">
     <h3>{header}<span>{text}</span></h3>
   </div>
</article>

<style>
.card{
    width: 371px;
    height: 271px;
    position: relative;
}

.img {
    filter: grayscale(100%);
    -webkit-filter: grayscale(100%);
}

.img:hover {
    filter: none;
    -webkit-filter: grayscale(0);
}

span{
    position: absolute;
    top: 0;
    font-size: 0.6em;
}
.name{
    padding: 0.2rem;
    padding-right: 2rem;
    position: absolute;
    left: 0.5rem;
    bottom: 1rem;
    background-color: var(--background_col); 
    opacity: 50%;
}
</style>

