---
const header = Astro.props.header;
const text = Astro.props.text;
---

<article class="card">
     <img src="src/img/acid.webp" alt="acid pauli image">
    <div class="name">
     <h3>{header}<span>{text}</span></h3>
   </div>
</article>

<style>

.card{
  
    position: relative;
}
span{
    padding-left: 30px;
}
.name{
    position: absolute;
    left: 0.5rem;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    background-color: var(--background_col);
    opacity: 50%;
}
</style>

