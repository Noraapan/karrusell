---
const header = Astro.props.header;
const text = Astro.props.text;
const text2 = Astro.props.text2;
---
<article class="ticket">
<div class=ticket2>
    <slot /> 
<h3>{header}</h3>
<p>{text}</p>
<p class="text2">{text2}</p>
</div>
</article>

<style>
    article.ticket{
        position: relative;
    }
    .ticket2{
        position: absolute;
        width: 476px;
        height: 230px;
        background-image: url(/public/img/ticket.svg);
        background-size: cover;
        aspect-ratio: 476/230;
    }
    h3, p{
        position: relative;
        font-family: "Alfa slab one", sans-serif;
        }
        article:hover{
            color: var(--accent_col);
        }
        h3{
            top: 37%;
            left: 20%;
            transform: rotate(-10.98deg);
        }
        p{
            top: 105%;
            left: 46%;
            transform: rotate(-280.99deg);
        }
        p.text2{
            top: 99%;
            left: 40%;
            transform: rotate(-280.99deg);   
        }
</style>